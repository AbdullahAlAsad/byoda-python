    "version": "0.2.0",
    "configurations": [
        {
            "name": "Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "/home/steven/src/byoda-python"
            }
        },
        {
            "name": "create_network",
            "type": "python",
            "request": "launch",
            "program": "tools/create_cert.py",
            "args": [
                "--debug",
                "--type", "NETWORK",
                "--network", "byoda.net",
                "--root-directory", "/home/steven/.byoda"

            ],
            "env": {
                "PYTHONPATH": "."
            },
            "console": "integratedTerminal"
        },
        {
            "name": "create_account",
            "type": "python",
            "request": "launch",
            "program": "tools/create_cert.py",
            "args": [
                "--debug",
                "--type", "ACCOUNT",
                "--account", "dathes",
                "--network", "byoda.net",
                "--root-directory", "/home/steven/.byoda"

            ],
            "env": {
                "PYTHONPATH": "."
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Flask dirserver debug",
            "type": "python",
            "request": "launch",
            "program": "/usr/local/bin/flask",
            "args": [
                "run",
                "--no-reload"
            ],
            "justMyCode": true,
            "env": {
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1",
                "BYODA_APP": "dirserver",
                "prometheus_multiproc_dir": "/var/tmp",
                "PYTHONPATH": "/home/steven/src/byoda-python"
            }
        }
    ]
}